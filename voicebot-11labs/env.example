# 11Labs Voicebot Environment Configuration
# Copy this file to .env and fill in your actual values

# 11Labs Configuration
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Optional: Specify a default voice ID
# Browse voices at: https://elevenlabs.io/voice-library
# Default is Rachel (21m00Tcm4TlvDq8ikWAM)
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Twilio Configuration (Required for telephony features)
# Sign up at: https://www.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Optional: Whisper Model Selection
# Options: tiny, base, small, medium, large
# Larger models are more accurate but slower
WHISPER_MODEL=base

# Optional: Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Optional: Advanced Audio Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
SILENCE_THRESHOLD=0.01
SILENCE_DURATION=2.0 